        <Label x:Name="lblAboutVersion" Content="Version String" HorizontalAlignment="Left" Margin="140,83,0,0" VerticalAlignment="Top" Width="308" FontSize="14"/>
        <TextBlock x:Name="tbAboutInfo" HorizontalAlignment="Left" Margin="23,141,0,0" Text="TextBlock" VerticalAlignment="Top" Height="153" Width="425"/>

    </Grid>
</Window>
